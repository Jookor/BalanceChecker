<Window x:Class="BalanceChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalanceChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Balance checker" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="30" FontSize="40"/>
            <Button x:Name="btnStart" Content="Record right side headphone" Width="250" VerticalAlignment="Center" Click="BtnStart_Click"/>
            <Label x:Name="lblStatus" Content="" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
